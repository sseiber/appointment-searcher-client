{
    "compilerOptions": {
        "outDir": "./client_dist",
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES6",
        "sourceMap": true,
        "jsx": "react",
        "allowJs": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            "webpack-env",
            "jest"
        ],
        "lib": [
            "ES6",
            "DOM"
        ],
        // "skipLibCheck": true,
        // "declaration": false,
        // "esModuleInterop": true,
        // "noLib": false,
        // "useDefineForClassFields": true
    },
    "compileOnSave": true,
    "exclude": [
        "client_dist",
        "node_modules",
        "scripts"
    ]
}